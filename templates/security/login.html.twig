{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="bread" id="breadcrumb"></section>

    <section id="connexionBox" class="connexion-box">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 connexion-box__inner">
                    <h1 class="text-center logo">PFS-Treichville</h1>
                    <h3 class="label text-center">Connexion</h3>
                    <form class="mt-30" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="row">
                            <div class="form-group col-12">
                                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control form-control-lg" autocomplete="username"  placeholder="Adresse email ou numero de telephone *" required autofocus>
                            </div>
                            <div class="form-group col-12 mt-4">
                                <input type="password" name="_password" id="password" class="form-control form-control-lg" autocomplete="current-password" placeholder="Mot de passe *" required>
                            </div>

                            <div class="d-grid gap-2 mt-5">
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                <button type="submit" class="btn btn-main btn-lg">Connexion</button>
                            </div>
                        </div>
                        <p class="mt-3">
                            Vous n'avez pas de compte? <a href="inscription.html">S'inscrire</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
